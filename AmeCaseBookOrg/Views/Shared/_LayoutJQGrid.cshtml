@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AMI CaseBook</title>
   
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqgridcss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqgrid")
    @Styles.Render("~/Content/amecss")

</head>
<body>
    <header>
        <div id="head">
            <div class="menu">
                <h1>
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/img/logo.png")" width="190" height="63" />
                    </a>
                </h1>
                <ul>
                    <li><a href="../about/about_index.asp" class="ali">ABOUT</a></li>
                    <li><a href="../amicase/amicase.asp">AMI CASE </a></li>
                    <li><a href="../dsmcase/dsmcase.asp">DSM CASE</a></li>
                    <li><a href="../communication/comm_main.asp">Communication</a></li>
                    <li class="right_m">@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li class="right_m">
                        @if (!Request.IsAuthenticated)
                        {
                            @Html.ActionLink("Your Account", "Login", "Account")
                        }
                        else
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="a_line">
                                    <i class="fa fa-user"></i>@User.Identity.GetUserName() <i class="fa fa-caret-down"></i>
                                </a>

                            }
                        }
                    </li>
                </ul>
            </div>
        </div>

    </header>
    <div id="contents">
        @RenderBody()
        <hr />
        <footer>
            <div id="footer" style="width:100%;height:150px;background:url(img/main_c_bg.gif);font-size:11px;color:#5d5d5d;border-top:1px solid #CCC;clear:both;">
                <ul style="margin:0 auto ;width:960px;padding-top:10px;">
                    <li>© 2015 BEN. All Rights Reserved</li>
                    <li style="float:left;line-height:20px;width:730px;">
                        ISGAN, also known as the Implementing Agreement for a Co-operative Programme on Smart Grids (ISGAN),
                        functions within a framework created by the International Energy Agency (IEA). The Views, findings and publications of ISGAN do not
                        necessarily represent the views or policies of the IEA Secretariat, all of its individual member countries or all
                        of ISGAN's Participants. All Rights Reserved.
                    </li>
                    <li style="float:right;"><img src="~/img/logo.png" /></li>
                </ul>

            </div>
        </footer>
    </div>



    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/slidesjs")
    @RenderSection("scripts", required: false)

    <!-- SlidesJS Required: Initialize SlidesJS with a jQuery doc ready -->

    <script type="text/javascript">

     $(function() {
          $('#slides').slidesjs({
            width: 800,
            height: 419,
            play: {
              active: false,
              auto: true,
              interval: 4000,
              swap: true
            }
      });
    });

    </script>
    <!-- End SlidesJS Required -->
</body>
</html>
