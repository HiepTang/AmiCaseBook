@model AmeCaseBookOrg.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutJQGrid.cshtml";
}

<div id="sub_tit">
    <ul>
        <li>Reset Password</li>
    </ul>
</div> 
<div id="contents">
    <div class="navi"> @Html.ActionLink("Home", "Index", "Home") > <span>Login</span> </div>
    <div id="pw_wrap">
        <div class="login">
             @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
             {
                @Html.AntiForgeryToken()
                <h1>Reset your password.</h1>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <ul class="log_w">
                    <li style="text-align:center;line-height:50px;padding-top:30px;">Email for your Casebook account </li>
                    <li style="text-align:center;">

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:300px;height:35px;border:1px solid #e5e5e5;padding-left:10px;" })
                    </li>
                    <li style="text-align:center;line-height:50px;padding-top:30px;">Password </li>
                    <li style="text-align:center;">

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:300px;height:35px;border:1px solid #e5e5e5;padding-left:10px;" })
                    </li>
                    <li style="text-align:center;line-height:50px;padding-top:30px;">Confirm Password </li>
                    <li style="text-align:center;">

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "width:300px;height:35px;border:1px solid #e5e5e5;padding-left:10px;" })
                    </li>
                </ul>
                <ul class="bt_login">
                    <li>
                        <input type="submit" value="Reset" class="bt_login_button" />

                    </li>
                </ul>

             }
        </div>
    </div>
</div>

   

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
