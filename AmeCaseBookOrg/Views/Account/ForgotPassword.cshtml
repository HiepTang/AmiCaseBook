@model AmeCaseBookOrg.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
   
}

<div id="sub_tit">
    <ul>
        <li>Forgot your casebook password</li>
    </ul>
</div> 
<div id="contents">
    <div class="navi"> @Html.ActionLink("Home", "Index", "Home") > <span>Forgot password</span> </div>
    <div id="pw_wrap">
        <div class="login">
               @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "ForgotPassword" }))
               {
                @Html.AntiForgeryToken()
                <h1>Forgot your Casebook password?</h1>
                <hr />

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <ul class="log_w">
                    <li style="text-align:center;color:#9d9d9d;margin-top:30px;">
                        No worries? Enter your login email address<br />
                        Below and we will send you new password.
                    </li>
                    <li style="text-align:center;line-height:50px;padding-top:30px;">Email for your Casebook account </li>
                    <li style="text-align:center;">
                     
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:300px;height:35px;border:1px solid #e5e5e5;padding-left:10px;" })
                    </li>    
                </ul>
                <ul class="bt_login">
                    <li>
                        <input type="submit" value="Send" class="bt_login_button" />
                       
                    </li>
                </ul>
                   
                    }
</div>        
    </div>
</div>

    

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
